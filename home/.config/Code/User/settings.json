{
    "editor.rulers": [
        // 70,
        80,
        100
    ],
    "metals.javaHome": "/usr/lib/jvm/java-25-openjdk-amd64",
    "gitlens.statusBar.enabled": false,
    "[scala]": {
        "editor.tabSize": 2
    },
    "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback', FontAwesome",
    "editor.autoClosingQuotes": "never",
    "editor.titleBar.enabled": false,
    "files.insertFinalNewline": true,
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "workbench.statusBar.visible": true,
    "terminal.external.linuxExec": "sakura",
    "shellcheck.customArgs": [
        "-x"
    ],
    "workbench.startupEditor": "none",
    "metals.serverVersion": "",
    "workbench.editorAssociations": {
        "*.html": "default",
        "*.ipynb": "jupyter-notebook"
    },
    "editor.fontLigatures": true,
    // "workbench.colorCustomizations": {
    //     "statusBar.background" : "#303030",
    //     "statusBar.noFolderBackground" : "#303030",
    //     "statusBar.debuggingBackground": "#511f1f",
    //     "statusBarItem.remoteBackground": "#303030",
    //     "statusBarItem.remoteForeground": "#cccccc"
    // },
    "files.exclude": {
        "**/.git": false,
        "**/*.git": true
    },
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "metals.enableStripMarginOnTypeFormatting": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.enabled": false,
    "redhat.telemetry.enabled": false,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.shellIntegration.decorationIconError": "\"\"",
    "terminal.integrated.shellIntegration.decorationIconSuccess": "\"\"",
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.allowChords": false,
    "files.trimTrailingWhitespace": true,
    "gitlens.rebaseEditor.ordering": "asc",
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.colorTheme": "Solarized Light",
    "editor.minimap.enabled": false,
    "cSpell.userWords": [
        "Hetzner",
        "routable",
        "scalalib",
        "unmarshal"
    ],
    "[proto3]": {
        "editor.defaultFormatter": "zxh404.vscode-proto3"
    },
    "window.zoomLevel": 0,
    "cmake.showOptionsMovedNotification": false,
    "metals.millScript": "./mill",
    "metals.javaVersion": "24",
    "metals.defaultBspToBuildTool": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.commandCenter": false,
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "[java]": {
        "editor.defaultFormatter": "scalameta.metals"
    },
    "window.customTitleBarVisibility": "never",
    "git.blame.editorDecoration.enabled": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "docker.extension.enableComposeLanguageServer": false,
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "chat.viewSessions.orientation": "stacked",
    "explorer.confirmDelete": false
}
