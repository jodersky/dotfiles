## Receive Options
set imap_user = jodersky@gmail.com
set imap_pass = "`pass sites/gmail.com`"
set folder = imaps://jodersky@imap.gmail.com
set spoolfile = +INBOX
#set record = +Sent

## Send Options
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com
set realname = "Jakob Odersky"
set from = jodersky@gmail.com
set hostname = "gmail.com"

set ssl_force_tls = yes
unset ssl_starttls

account-hook $folder "set imap_user=jodersky@gmail.com imap_pass=`pass sites/gmail.com`"