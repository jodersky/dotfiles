#!/bin/bash
# Install base packages for a minimal Linux desktop

set -o errexit

# Basic packages and Window manager
sudo apt install \
     bluez \
     brightnessctl \
     build-essential \
     emacs \
     evince \
     feh \
     gimp \
     git \
     i3 \
     i3blocks \
     i3lock \
     inkscape \
     inotify-tools \
     jq \
     network-manager \
     pandoc \
     pass \
     python3-pydbus \
     ranger \
     redshift \
     restic \
     rsync \
     sakura \
     shellcheck \
     scrot \
     texlive-fonts-extra \
     texlive-latex-extra \
     thunar \
     xdg-utils \
     xdotool \
     xss-lock

# Packages required for using yubikey
sudo apt install gnupg2 dirmngr pcscd scdaemon
gpg --recv-keys 4E7DA7B5A0F86992D6EB3F514601878662E33372
gpg --card-status
